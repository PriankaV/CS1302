import pandas as pd
import matplotlib.pyplot as plt
import matplotlib.font_manager as fm

# Load the df dataset
df = pd.read_csv('/Users/avvaichandrasekaran/CollegeCoding/CSC1302/Project/titles.csv', 
                   names=['title', 'type', 'release_year', 'age_certification', 'runtime', 'seasons', 'imdb_score'])

# Set the font
font_path = 'path/to/SourceSansPro-Regular.ttf'
font_prop = fm.FontProperties(fname=font_path)

# Set the color scheme
color_scheme = ['#FF5733', '#C70039', '#900C3F', '#581845']

# Scatter plot
plt.scatter(df['imdb_score'], df['runtime'], color=color_scheme[0])
plt.xlabel('Release Year', fontproperties=font_prop)
plt.ylabel('Runtime', fontproperties=font_prop)
plt.title('Release Year vs. Runtime', fontproperties=font_prop)
plt.show()

# Histogram
plt.hist(df['age_certification'], bins=20, color=color_scheme[1])
plt.xlabel('Age Certification', fontproperties=font_prop)
plt.ylabel('Frequency', fontproperties=font_prop)
plt.title('Distribution of Age Certification', fontproperties=font_prop)
plt.show()

# Bar chart
type_counts = df['type'].value_counts()
plt.bar(type_counts.index, type_counts.values, color=color_scheme[2])
plt.xlabel('Type', fontproperties=font_prop)
plt.ylabel('Count', fontproperties=font_prop)
plt.title('Number of Titles by Type', fontproperties=font_prop)
plt.show()

# Line graph
release_year_counts = df.groupby('release_year')['title'].count()
plt.plot(release_year_counts.index, release_year_counts.values, color=color_scheme[3])
plt.xlabel('Release Year', fontproperties=font_prop)
plt.ylabel('Number of Titles', fontproperties=font_prop)
plt.title('Number of Titles by Release Year', fontproperties=font_prop)
plt.show()

# Pie chart
age_ratings = df['age_certification'].dropna()
age_ratings_count = age_ratings.value_counts()
plt.pie(age_ratings_count, labels=age_ratings_count.index, autopct='%1.1f%%', colors=color_scheme)
plt.title('Distribution of Age Ratings in Disney Plus', fontproperties=font_prop)
plt.show()
